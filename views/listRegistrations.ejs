<!DOCTYPE html>
<html>
  <head>
    <title>Event Registrations</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="container mt-5">
    <h2 class="mb-4">Event Registrations</h2>

    <% if (registrations.length === 0) { %>
    <div class="alert alert-warning">No students have registered yet</div>
    <% } else { %>
    <div class="list-group">
      <% registrations.forEach(r => { %>
      <div class="list-group-item">
        <p><strong>Student:</strong> <%= r.studentId %></p>
        <p><strong>Event:</strong> <%= r.eventName %> (<%= r.eventDate %>)</p>
        <p><strong>Location:</strong> <%= r.eventLocation %></p>
        <p>
          <strong>Registered At:</strong> <%= r.registrationDate.toDateString()
          %>
        </p>
      </div>
      <% }) %>
    </div>
    <% } %>
  </body>
</html>
